
<div class="card-category d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>'); width: 100; height: 300px;">
  <div class="container d-flex justify-content-center">
    <div>
      <h1><strong><%= @list.name %></strong></h1>
    </div>
  </div>
</div>




<div class="container w-75">

  <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: "btn btn-danger mx-2 my-4 text-white" %>
  <%= link_to 'go back', '/lists', class: "btn btn-primary m-3 round" %>

  <div class="d-flex justify-content-between">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card p-2" style="width: 14rem;">
        <%= image_tag(bookmark.movie.poster_url) %>
        <h5><%= bookmark.movie.title %></h5>
        <div>
          <p><%= bookmark.comment%></p>
          <%= link_to 'remove bookmark', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    <% end %>
  </div>



</div>
