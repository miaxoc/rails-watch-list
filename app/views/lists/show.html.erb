<div class="container">
  <h1><%= @list.name %></h1>
  <p>Find me in app/views/lists/show.html.erb</p>

  <%= link_to 'Add bookmark', new_list_bookmark_path(@list) %>

  <div>
    <% @list.bookmarks.each do |bookmark| %>
      <h3><%= bookmark.movie.title %></h3>
      <p><%= bookmark.comment%></p>
      <%= link_to '', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fa-solid fa-trash mt-1" %>
    <% end %>
  </div>


  <%= link_to 'go back', '/lists' %>

</div>
