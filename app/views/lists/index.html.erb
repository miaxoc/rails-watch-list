<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,1),rgba(0,0,0,0.4)), url(https://www.shutterstock.com/image-photo/cinema-blank-wide-screen-people-600nw-2314929885.jpg); width: 100; height: 400px;">
  <div class="container d-flex justify-content-center">
    <div>
      <h1><strong>Movie Watch List</strong></h1>
    </div>
  </div>
</div>

<div class="container w-75">
  <%= link_to 'create new list', 'lists/new', class: "btn btn-danger  my-4 text-white", style: "width: 100%;"%>
  <div class="list-cards col-12">
    <% @lists.each do |list| %>
      <div class="card-category d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>')">
        <h3 class="text-center"><%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %></h3>
        <%= link_to '', list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fa-solid fa-trash text-white ms-5 mb-2" %>
      </div>
    <% end %>
  </div>
</div>
