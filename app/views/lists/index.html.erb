<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,1),rgba(0,0,0,0.4)), url(https://www.shutterstock.com/image-photo/cinema-blank-wide-screen-people-600nw-2314929885.jpg); width: 100; height: 400px;">
  <div class="container d-flex justify-content-center">
    <h1><strong>Movie Watch List</strong></h1>
  </div>
</div>

<div class="container w-75">

  <div class="d-flex row">
    <% @lists.each do |list| %>
      <div class="card col-4 m-3", style="width: 18rem; height: 10rem; border-radius: 8px;">
        <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
        <h3 class="text-center"><%= link_to list.name, list_path(list), class: "card-title" %></h3>
      </div>
    <% end %>
  </div>

  <div>
    <%= link_to 'create new list', 'lists/new', class: "btn btn-danger" %>
  </div>

</div>
